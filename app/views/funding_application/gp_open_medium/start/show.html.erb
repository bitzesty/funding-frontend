<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: nil,
      page_title: t('gp_open_medium.start.page_title')
    }
  )
%>

<h1 class="govuk-heading-xl nlhf-!-line-height-1-3">
  <%= t('gp_open_medium.start.page_heading_html') %>
</h1>

<p class="govuk-body">
  <%= t('gp_open_medium.start.use_this_service') %>
</p>

<p class="govuk-body">
  <%= t('gp_open_medium.start.use_this_service_desc') %>  
</p>

<%= form_tag(
    url: :funding_application_start,
    method: :put,
    local: true
  ) do |f| 
%>

  <%= render(
      ButtonComponent.new(
        element: 'button',
        is_start_button: true,
        text: t('buttons.labels.start_now')
      )
    ) 
  %>

<% end %>

<h2 class="govuk-heading-m">
  <%= t('gp_open_medium.start.page_sub_heading_1') %>
</h2>

<ul class="govuk-list govuk-list--bullet" aria-label="a list of questions we will ask">

  <li>
    <%= t('gp_open_medium.start.we_will_ask_list.item_1') %>
  </li>

  <li>
    <%= t('gp_open_medium.start.we_will_ask_list.item_2') %>
  </li>

  <li>
    <%= t('gp_open_medium.start.we_will_ask_list.item_3') %>
  </li>

  <li>
    <%= t('gp_open_medium.start.we_will_ask_list.item_4') %>
  </li>

</ul>

<h2 class="govuk-heading-m">
  <%= t('gp_open_medium.start.page_sub_heading_2') %>
</h2>

<ul class="govuk-list govuk-list--bullet" aria-label="a list of things you will need">

  <li>
    <%= t('gp_open_medium.start.you_will_need_list.item_1') %>
  </li>

  <li>
    <%= t('gp_open_medium.start.you_will_need_list.item_2') %>
  </li>

</ul>

<h2 class="govuk-heading-m">
  <%= t('gp_open_medium.start.page_sub_heading_3') %>
</h2>

<p class="govuk-body">
  <%= t(
          'gp_open_medium.start.read_about_what_we_fund_html',
          href: link_to(
                  t('gp_open_medium.start.read_about_what_we_fund_text'),
                  "#{I18n.locale == :cy ? 'https://www.heritagefund.org.uk/cy/node/110955' : 'https://www.heritagefund.org.uk/funding/what-we-fund' }",
                  target: '_blank',
                  class: 'govuk-link'
          )
      )
  %>
</p>

<p class="govuk-body">
  <%= t(
          'gp_open_medium.start.project_outcomes_html',
          href: link_to(
                  t('gp_open_medium.start.project_outcomes_text'),
                  "#{I18n.locale == :cy ? 'https://www.heritagefund.org.uk/cy/node/110862' : 'https://www.heritagefund.org.uk/funding/outcomes' }",
                  target: '_blank',
                  class: 'govuk-link'
          )
      )
  %>
</p>

<p class="govuk-body">
  <%= t(
          'gp_open_medium.start.application_guidance_html',
          href: link_to(
          t('gp_open_medium.start.application_guidance_text'),
         "#{I18n.locale == :cy ? 'https://www.heritagefund.org.uk/cy/node/111087' : 'https://www.heritagefund.org.uk/funding/national-lottery-grants-heritage-2021/10-250k'}",
          target: '_blank',
          class: 'govuk-link'
          )
      )
  %>
</p>
