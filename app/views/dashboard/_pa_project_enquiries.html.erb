<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

<h2 class="govuk-heading-m">
  <%= t('dashboard.pa_project_enquiries.sub_heading') %>
<h2>

<% if @pa_project_enquiry_presence %>

  <p class="govuk-body">
    <%= I18n.t("dashboard.pa_project_enquiries.existing") %>
  </p>

  <ul class="govuk-list govuk-list--number nlhf-list nlhf-list--links govuk-!-margin-bottom-8">

    <% @pre_applications.each do| pre_application | %>

      <% if pre_application.pa_project_enquiry.present? %>

        <li class="nlhf-list__item nlhf-task__item">

          <span class="nlhf-tag-name">

            <%=
              link_to_unless(
                pre_application.submitted_on.present?,
                pre_application.pa_project_enquiry&.working_title.present? ? pre_application.pa_project_enquiry&.working_title : t('dashboard.pa_project_enquiries.untitled'),
                pre_application_project_enquiry_previous_contact_path(pre_application_id: pre_application.id),
                class: 'govuk-link govuk-link--no-visited-state',
                aria: {describedby: pre_application.id}
              ) do |name|
                ("#{name}".html_safe) + ("#{' &ndash; ' + I18n.t("dashboard.generic.reference") + ': ' }".html_safe + pre_application.project_reference_number if pre_application.project_reference_number.present?)
              end
            %>

          </span>

          <%=
            render(
              partial: 'pre_applications_tags',
              locals: {
                pre_application: pre_application
              }
            )
          %>

        </li>

      <% end %>

    <% end %>

  </ul>

<% end %>

<% if Flipper.enabled?(:project_enquiries_enabled) %>
  
  <h3 class="govuk-heading-s">
    <%= I18n.t("dashboard.pa_project_enquiries.new.sub_heading") %>
  </h3>

      <p class="govuk-body">
        <%= I18n.t("dashboard.pa_project_enquiries.new.project_enquiries_applications") %>

        <a
          class="govuk-link govuk-!-margin-right-1"
          href="https://www.heritagefund.org.uk/about/heritage-2033-our-10-year-strategy"
          target="_blank"
        >
          <%= I18n.t("dashboard.pa_project_enquiries.new.strategy_href") %>
        </a>
        <%= I18n.t("dashboard.pa_project_enquiries.new.strategy_post_link") %>
        <%= I18n.t("dashboard.pa_project_enquiries.new.guidance") %>
        <%= I18n.t("dashboard.pa_project_enquiries.new.Please_check") %>

      </p>

      <p class="govuk-body">
        <%= I18n.t("dashboard.pa_project_enquiries.new.for_the_following") %>
      </p>

      <ul class="govuk-list govuk-list--bullet govuk-hint">
        <li><%= I18n.t("dashboard.pa_project_enquiries.new.woodland_investment") %></li>
        <li>
          <%= I18n.t("dashboard.pa_project_enquiries.new.local_places_nature") %></li>
        <li>
          <%= I18n.t("dashboard.pa_project_enquiries.new..heritage_places_strategic") %></li>
      </ul>

  <%= form_with(
      url: pre_application_project_enquiry_start_url,
      method: :post,
      local: true
    ) do |f| 
  %>

    <%= render(
        ButtonComponent.new(
          element: "button",
          is_start_button: true,
          text: t("dashboard.pa_project_enquiries.new.buttons.start")
        )
      ) if Flipper.enabled?(:project_enquiries_enabled) 
    %>

  <% end %>

<% end %>